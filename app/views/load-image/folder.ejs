<%- contentFor('HeaderCss') %>
<!-- jsvectormap css -->
<link href="/assets/libs/jsvectormap/css/jsvectormap.min.css" rel="stylesheet" type="text/css" />

<!-- Swiper slider css -->
<link href="/assets/libs/swiper/swiper-bundle.min.css" rel="stylesheet" type="text/css" />
<%- contentFor('body') %>
    <style>

        #folder-list .folder-item {
            border-bottom: 1px solid #ddd;
            margin-bottom: 5px;
            padding: 5px;
        }

        #folder-list .btn {
            padding: 4px 10px;
            font-size: 0.875rem;
        }
    </style>
</head>

<body>
    <div class="container my-4">
        <h1 class="text-center">load-image</h1>
        <div class="list-group" id="folder-list">
            <% folders.forEach(folder=> { %>
                <div class="d-flex justify-content-between align-items-center folder-item p-2"
                    id="folder-<%= folder.name %>">
                    <a href="/load-image/<%= folder.name %>" class="list-group-item list-group-item-action flex-grow-1">
                        <%= folder.isDirectory ? '📁 ' : '' %>
                        <%= folder.name %>
                    </a>
                </div>
                <% }); %>
        </div>
    </div>
</body>
<%- contentFor('FooterJs') %>